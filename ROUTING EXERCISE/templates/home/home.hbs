<div class="container">

    {{> header}}
    <div>
        <h1>Home Page</h1>
        {{#if loggedIn}}
            {{#if hasTeam}}
                <a href="#/catalog/{{objectId}}">Go To Team</a>
            {{else}}
                {{#if isOnTeam}}
                    <p>You are member of a team!</p>
                {{else}}
                    <p>You are currently not a member of a team. View the <a href="#/catalog">catalog</a> to join or create one.</p>
                {{/if}}
            {{/if}}
        {{else}}
            <p>You are currently not logged in. <a href="#/login">Log in</a> / <a href="#/register">Register</a></p>
        {{/if}}
    </div>
</div>

{{> footer}}