{{> header}}
{{> notifications}}
<div class="row event-details">
    <div class="col-md-12 text-center overflow-hidden">

        <img class="details-img"
            src="{{image}}" />
        <div class="my-3 p-3">
            <h2 id="name" class="display-5">{{name}}</h2>
            <p class="infoType">Description:</p>
            <p class="event-description">{{description}}</p>
            <p class="infoType">Date: <small>{{timeDate}}</small></p>
            <p class="infoType">Peope interested in: <small id="likes">{{peopleInterestedIn}}</small></p>
            <p class="infoType">Organizer: <small>{{organizer}}</small></p>
        </div>
        {{#if isOwner}}
        <a href="#/edit/{{objectId}}" class="btn btn-primary btn-lg">Edit the event</a>
        <a href="#/close/{{objectId}}" class="btn btn-danger btn-lg">Close the event</a>
        {{else}}
        <a href="#/like/{{objectId}}" class="btn btn-info btn-lg">Join the event</a>
        {{/if}}
    </div>
</div>
{{> footer}}