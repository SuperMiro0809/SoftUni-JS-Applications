{{> header}}
<div class="container details">
        <div class="details-content">
            <h2>{{title}}</h2>
            <strong>Category</strong>
            <p>{{content}}</p>
            <div class="buttons">
                {{#if isOwner}}
                <a href="#/delete/{{objectId}}" class="btn delete">Delete</a>
                <a href="#/edit/{{objectId}}" class="btn edit">Edit</a>
                {{else}}
                <a href="#/home" class="btn edit">Back</a>
                {{/if}}
            </div>
        </div>
</div>
{{> footer}}